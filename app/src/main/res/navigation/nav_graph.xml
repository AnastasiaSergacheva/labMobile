<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/oneFragment"
        android:name="com.sergacheva.labsapp.OneFragment"
        android:label="OneFragment"/>
    <fragment
        android:id="@+id/twoFragment"
        android:name="com.sergacheva.labsapp.TwoFragment"
        android:label="twoFragment"/>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.sergacheva.labsapp.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_oneFragment"
            app:destination="@id/oneFragment" />
        <action
            android:id="@+id/action_splashFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sergacheva.labsapp.LoginFragment"
        android:label="LoginFragment"/>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sergacheva.labsapp.RegistrationFragment"
        android:label="RegistrationFragment"/>

</navigation>